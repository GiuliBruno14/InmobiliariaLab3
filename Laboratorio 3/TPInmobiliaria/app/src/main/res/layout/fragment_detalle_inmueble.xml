<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_degrade"
    android:padding="34dp"
    tools:context=".ui.inmuebles.DetalleInmuebleFragment">

    <!-- Contenedor principal -->
    <LinearLayout
        android:id="@+id/inmueble_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_redondeada"
        android:elevation="4dp"
        android:gravity="center_horizontal"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen del inmueble -->
        <ImageView
            android:id="@+id/iv_imagen_inmueble"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="Imagen inmueble"
            android:scaleType="centerCrop" />

        <!-- Dirección -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Dirección"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_direccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Uso -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Uso (Casa, Local, etc.)"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_uso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tipo -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Tipo"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_tipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ambientes -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Ambientes"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_ambientes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:inputType="number"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Latitud -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Latitud"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_latitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Longitud -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Longitud"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_longitud"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Precio -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Precio"
            app:boxBackgroundColor="@android:color/white"
            app:boxStrokeColor="@color/verde_oscuro"
            app:hintTextColor="@color/verde_oscuro">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_precio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:textColor="@color/verde_oscuro"
                android:textSize="14sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Estado (CheckBox) -->
        <CheckBox
            android:id="@+id/cb_estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"
            android:text="Disponible"
            android:textColor="@color/verde_oscuro"
            android:textSize="16sp"
            app:buttonIconTint="@color/white"
            android:buttonTint="@color/verde_oscuro"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
